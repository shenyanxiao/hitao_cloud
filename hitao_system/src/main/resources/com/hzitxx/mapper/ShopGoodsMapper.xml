<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzitxx.mapper.ShopGoodsMapper">
<!--表的列  -->
<sql id="shopGoods">
goods_id,goods_name,goods_jingle,gc_id,brand_id,goods_price,goods_marketprice,goods_serial,goods_click,
goods_salenum,goods_collect,goods_spec,goods_storage,main_image,goods_state,goods_verify,
areaid_1,areaid_2,color_id,transport_id,goods_freight,goods_vat,goods_commend,evaluation_good_star,evaluation_count,
is_del,created_time,updated_time
</sql>
<!-- 查询所有商品信息/根据id回显商品信息 -->
<select id="findAll" resultMap="resultMap" parameterType="map">
select <include refid="shopGoods"></include> from shop_goods
<where>
<if test="goodsId!=null">goods_id=#{goodsId}</if>
</where>
</select>
<!-- 添加商品信息 -->
<insert id="addGoods" parameterType="com.hzitxx.entity.ShopGoods">
insert into shop_goods(goods_name,goods_jingle,gc_id,brand_id,goods_price,goods_marketprice,
goods_serial,goods_click,goods_salenum,goods_collect,goods_spec,goods_storage,main_image,goods_state,
goods_verify,areaid_1,areaid_2,color_id,transport_id,goods_freight,goods_vat,goods_commend,
evaluation_good_star,evaluation_count,is_del,created_time) 
VALUES(#{goodsName},#{goodsJingle},#{gcId},#{brandId},#{goodsPrice},#{goodsMarketprice},
#{goodsSerial},#{goodsClick},#{goodsSalenum},#{goodsCollect},#{goodsSpec},#{goodsStorage},#{mainImage},
#{goodsState},#{goodsVerify},#{areaid1},#{areaid2},#{colorId},#{transportId},#{goodsFreight},#{goodsVat},
#{goodsCommend},#{evaluationGoodStar},#{evaluationCount},#{isDel},#{createdTime})
</insert>
<!--根据id修改商品信息 -->
<update id="updateGoods" parameterType="com.hzitxx.entity.ShopGoods">
update shop_goods 
<set> 
<if test="goodsName!=null ">goods_name=#{goodsName},</if>
<if test="goodsJingle!=null">goods_jingle=#{goodsJingle},</if>
<if test="gcId!=null">gc_id=#{gcId},</if>
<if test="brandId!=null">brand_id=#{brandId},</if>
<if test="goodsPrice!=null">goods_price=#{goodsPrice},</if>
<if test="goodsMarketprice!=null">goods_marketprice=#{goodsMarketprice},</if>
<if test="goodsSerial!=null">goods_serial=#{goodsSerial},</if>
<if test="goodsClick!=null">goods_click=#{goodsClick},</if>
<if test="goodsSalenum!=null">goods_salenum=#{goodsSalenum},</if>
<if test="goodsCollect!=null">goods_collect=#{goodsCollect},</if>
<if test="goodsSpec!=null">goods_spec=#{goodsSpec},</if>
<if test="goodsStorage!=null">goods_storage=#{goodsStorage},</if>
<if test="mainImage!=null">main_image=#{mainImage},</if>
<if test="goodsState!=null">goods_state=#{goodsState},</if>
<if test="goodsVerify!=null">goods_verify=#{goodsVerify},</if>
<if test="areaid1!=null">areaid_1=#{areaid1},</if>
<if test="areaid2!=null">areaid_2=#{areaid2},</if>
<if test="colorId!=null">color_id=#{colorId},</if>
<if test="transportId!=null">transport_id=#{transportId},</if>
<if test="goodsFreight!=null">goods_freight=#{goodsFreight},</if>
<if test="goodsVat!=null">goods_vat=#{goodsVat},</if>
<if test="goodsCommend!=null">goods_commend=#{goodsCommend},</if>
<if test="evaluationGoodStar!=null">evaluation_good_star=#{evaluationGoodStar},</if>
<if test="evaluationCount!=null">evaluation_count=#{evaluationCount},</if>
<if test="isDel!=null">is_del=#{isDel},</if>
<if test="updatedTime!=null">updated_time=#{updatedTime}</if>
</set>
where goods_id=#{goodsId}
</update>
<!--根据id删除商品信息  -->
<delete id="deleteGoods" parameterType="Integer">
delete from shop_goods where goods_id=#{goodsId}
</delete>
<!--封装集  -->
<resultMap id="resultMap" type="com.hzitxx.entity.ShopGoods">
<id column="goods_id" property="goodsId" />
<result column="goods_name" property="goodsName" />
<result column="goods_jingle" property="goodsJingle" />
<result column="gc_id" property="gcId" />
<result column="brand_id" property="brandId" />
<result column="goods_price" property="goodsPrice" />
<result column="goods_marketprice" property="goodsMarketprice" />
<result column="goods_serial" property="goodsSerial" />
<result column="goods_click" property="goodsClick" />
<result column="goods_salenum" property="goodsSalenum" />
<result column="goods_collect" property="goodsCollect" />
<result column="goods_spec" property="goodsSpec" />
<result column="goods_storage" property="goodsStorage" />
<result column="main_image" property="mainImage" />
<result column="goods_state" property="goodsState" />
<result column="goods_verify" property="goodsVerify" />
<result column="areaid_1" property="areaid1" />
<result column="areaid_2" property="areaid2" />
<result column="color_id" property="colorId" />
<result column="transport_id" property="transportId" />
